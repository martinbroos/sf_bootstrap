{% extends 'MBSiteBundle::layout.html.twig' %}

{% block content %}
	<div class="site--retain">
		<h1>Test Formulier</h1>
		<form class="form" parsley-validate novalidate>
			<div class="form__field-wrapper">
				<div class="form__label-wrapper">
					<label>Naam</label>
				</div>
				<div class="form__input-wrapper">
					<input type="text" required />
				</div>
			</div>
			<div class="form__field-wrapper">
				<div class="form__label-wrapper">
					<label>Email</label>
				</div>
				<div class="form__input-wrapper">
					<input type="email" parsley-trigger="change" required />
				</div>
			</div>
            <div class="form__field-wrapper">
                <div class="form__label-wrapper">
                    <label>Message</label>
                </div>
                <div class="form__input-wrapper">
                    <textarea parsley-trigger="keyup" parsley-rangelength="[20,200]"></textarea>
                </div>
            </div>
			<div class="form__button-wrapper">
				<button type="submit" class="button">Verzend</button>
			</div>			
		</form>
	</div>
{% endblock %}
