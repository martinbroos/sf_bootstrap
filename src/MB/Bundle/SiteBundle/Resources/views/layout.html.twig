{% extends '::base.html.twig' %}

{% block title %}Site title{% endblock %}

{% block head_style %}
    {% stylesheets
        'bundles/mbsite/sass/theme.scss' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block head_script %}
    {% javascripts
        'bundles/mbsite/components/modernizr/modernizr.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts
        'bundles/mbsite/components/selectivizr/selectivizr.js' %}
        <!--[if (gte IE 6)&(lte IE 8)]>          
        <script src="{{ asset_url }}"></script>
        <![endif]-->
    {% endjavascripts %}
{% endblock %}

{% block body_script_bottom %}
    {% javascripts
        'bundles/mbsite/components/jquery/jquery.min.js'
        'bundles/mbsite/components/parsleyjs/parsley.js'
        'bundles/mbsite/components/parsleyjs/i18n/messages.nl.js'
        'bundles/mbsite/js/init.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block header %}
    <div class="site--retain">
        <header>
            <nav class="nav--primary">
                {{ knp_menu_render('MBSiteBundle:MenuBuilder:mainMenu') }}
            </nav>
        </header>
    </div>
{% endblock %}

{% block footer %}
    <footer>
        <div class="site--retain">
            <span class="credits">Website door <a href="http://www.martinbroos.nl" rel="external">Martin Broos</a></span>
        </div>
    </footer>
{% endblock %}